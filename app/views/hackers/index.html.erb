<%= form_for @ken, url: hackers_path, html:{class: "user_form"} do |f| %>
  <label>Name:</label>
  <%= f.text_field :name %>
  <label>Email:</label>
  <%= f.text_field :email %>
  <%= f.submit "Create Account" %>
<% end %>
</br>
</br>
<ul>
<p>Delete Users:</p>
<% @users.each do |user| %>
<li><%= link_to user.email, hacker_path(user.id), method: :delete %> </li>
<% end %>
</ul>
</br>
</br>
<%= form_for @comment, url: comments_path, html:{class: "comment_form"} do |f| %>
  <label>Title:</label>
  <%= f.text_field :title %>
  <label>Body:</label>
  <%= f.text_field :body %>
  <%= f.submit "Create Comment" %>
<% end %>

<ul>
<p>Delete Comments:</p>
<% @comments.each do |comment| %>
<li><%= link_to comment.title, comments_path(comment.id), method: :delete %> </li>
<% end %>
</ul>
